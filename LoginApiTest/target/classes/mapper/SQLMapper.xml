<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.course.model">
    <!--登录接口case-->
    <select id="LoginTrueCase" parameterType="Integer" resultType="com.course.model.LoginCase">
        select * from loginCase where id = #{id};
    </select>

    <!--添加用户信息接口case-->
    <select id="addUserTest" parameterType="Integer" resultType="com.course.model.AddUserCase">
        select * from addUserCase where id = #{id};
    </select>

    <!--获取用户信息列表case-->
    <select id="getUserInfoListTest" parameterType="Integer" resultType="com.course.model.GetUserListCase">
        select * from getUserListCase where sex = #{sex};
    </select>

    <!--获取用户信息case-->
    <select id="getUserInfoTest" parameterType="Integer" resultType="com.course.model.GetUserInfoCase">
        select * from getUserInfoCase where id = #{id};
    </select>

    <!--更新用户信息case-->
    <select id="updateUserInfoTest" parameterType="Integer" resultType="com.course.model.UpdateUserInfoCase">
        select * from updateUserInfoCase where id = #{id};
    </select>

    <!--删除用户信息case-->
    <select id="deleteUserInfoTest" parameterType="Integer" resultType="com.course.model.UpdateUserInfoCase">
        select * from updateUserInfoCase where id = #{id};
    </select>
</mapper>