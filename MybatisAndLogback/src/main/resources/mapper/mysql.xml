<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="com.course">
    <select id="getBookCount" resultType="Integer">
        select count(*) from book;
    </select>

    <select id="getBookInfo"  parameterType="Integer" resultType="com.course.model.Book">
        select * from Book where id = #{id}
    </select>

    <insert id="insertIntoBook" parameterType="com.course.model.Book">
        insert into book(name,author,id)
        values(#{name},#{author},#{id})
    </insert>

    <update id="updateBook" parameterType="com.course.model.Book">
        update Book set name=#{name}, author=#{author}
        where id=#{id}
    </update>

    <delete id="deleteFormBook" parameterType="Integer">
        delete from Book
        where id=#{id}
    </delete>
</mapper>